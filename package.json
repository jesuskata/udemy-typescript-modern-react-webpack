{
    "name": "proyecto-base-react-con-typescript-y-webpack",
    "version": "1.0.0",
    "description": "Este repositorio tiene el propósito de establecer una base de proyecto de React con TypeScript y Webpack. Incluye configuración para ESLint y Prettier en VSCode",
    "main": "index.js",
    "scripts": {
        "start": "webpack serve --open",
        "build": "webpack",
        "lint": "eslint . --ext .ts,.tsx"
    },
    "keywords": [
        "react",
        "typescript",
        "webpack",
        "vscode",
        "eslint",
        "prettier"
    ],
    "author": "jesuskata",
    "license": "ISC",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.28.3",
        "babel-loader": "^8.2.2",
        "eslint": "^7.30.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^7.0.1",
        "prettier": "2.3.2",
        "typescript": "^4.3.5",
        "webpack": "^5.44.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-middleware": "^5.0.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-hot-middleware": "^2.25.0"
    },
    "husky": {
        "hooks": {
            "post-merge": "npm install",
            "post-rewrite": "npm install",
            "pre-commit": "npm run lint"
        }
    }
}
